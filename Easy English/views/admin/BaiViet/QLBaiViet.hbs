{{#section 'css'}}
{{/section}}

{{#section 'js'}}
<script>

    $("button").click(function () {
        var a = $(this).val();
        $('#FormDelete').attr('action', a);

    })
</script>
{{/section}}

<div class="mt-3 ml-3 mr-3">
    <div class="col-md-5 title text-black">
        <h2><b>Quản lý Bài viết</b></h2>
    </div>
    <hr>
    <div class="col-md-12 ml-5 mt-3 d-flex flex-nowrap">
        <div class="col-md-10 d-flex justify-content-end">
            <a href="/admin/baiviet/AddBaiViet"  class="btn" >
                <i class="fas fa-plus-circle"></i> Thêm bài</a>
        </div>
    </div>
    <div class="col-md-12 mt-3">
        <table class="table table-hover table-dark word-table datatable" id="myTable">
            <thead>
                <tr>
                    <td>STT</td>
                    <td>Tên bài viết </td>
                    <td>Tác giả</td>
                    <td>Ngày đăng</td>
                    <td>Hành động</td>
                </tr>
            </thead>
            <tbody>
                {{#each List}}
                <tr>
                    <td scope="row">{{a}}</td>
                    <td>{{TieuDe}}</td>
                    <td>{{hoten}}</td>
                    <td>{{format NgayDang}}</td>
                    <td>
                        <button class="btn" value="{{idTips}}" data-toggle="modal" data-target="#XoaModal"><i
                                class="fas fa-minus-circle"></i></button>
                        <a  class="btn" href="/admin/baiviet/edit/{{idTips}}"><i class="far fa-eye"></i></a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<form method="POST" id="FormDelete">
    <div class="modal fade" id="XoaModal" tabindex="-1" role="dialog" aria-labelledby="logoutModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" style="width:400px" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-black" id="logoutModalLabel"><b>DELETE</b></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Bạn thật sự muốn xóa?
                </div>
                <div class="col-md-12 p-3 text-center">
                    <a href="javascript: $('#FormDelete').submit()" class="btn btn-danger">Đồng ý</a>
                </div>
            </div>
        </div>
    </div>
</form>
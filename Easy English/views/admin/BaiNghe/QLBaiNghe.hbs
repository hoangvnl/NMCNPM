{{#section 'js'}}
<script>
    $("button").click(function () {
        var a = $(this).val();
        $('#FormDelete2').attr('action', '/admin/bainghe/delete/' + a);

    })

    $('#select').on('change', function () {
        $('#formcate').submit();
    });
</script>
{{/section}}


<div class="mt-3">
    <div class="title ml-3 mr-3 text-black">
        <h2><b>Quản Lý Phần Luyện Nghe</b></h2>
        <hr>
    </div>

    <form id="formcate" action="/admin/bainghe/LocBaiNghe" method="POST">
        <div class="col-md-12 ml-4 mt-3 d-flex flex-nowrap">
            <div class="d-flex flex-nowrap col-md-9">
                <div class="d-flex flex-nowrap col-md-10">
                    <label for="" class="col-md-4">Lọc theo mức độ:</label>
                    <select id="select" name="select" class="form-control border col-md-5">
                        <option>Cấp độ luyện nghe</option>
                        {{#each this.MucDo}}
                        <option {{#if isSelected}} selected {{/if}} value="{{idCDBaiHoc}}">{{TenBai}}</option>
                        {{/each}}
                    </select> &nbsp;
                    <a href="#" class="col-md-3" data-toggle="modal" data-target="#ThemCat-Modal"><i class="fas fa-plus-circle"></i>
                        Thêm mức độ</a>
                </div>
                <div>

                </div>
            </div>
            <div class="col-md-2 d-flex justify-content-end">
                <a id="btnThem" href="/admin/bainghe/addBai" class="btn">
                    <i class="fas fa-plus-circle"></i> Thêm bài học</a>
            </div>
        </div>
    </form>

    <div class="col-md-12 mt-3">
        <table class="table table-hover table-dark word-table datatable" id="myTable">
            <thead>
                <tr>
                    <td>STT</td>
                    <td>Tên bài học </td>
                    <td>Mức độ</td>
                    <td>Ngày đăng </td>
                    <td>Hành động</td>
                </tr>
            </thead>
            <tbody>
                {{#each listBN}}
                <tr>
                    <td>{{a}}</td>
                    <td>{{tenBai}}</td>
                    <td>{{TenBai}}</td>
                    <td>{{format NgayDang}}</td>
                    <td>
                        <button class="btn" value="{{idBaiNghe}}" data-toggle="modal" data-target="#delModal2">
                            <i class="fas fa-minus-circle"></i>
                        </button>
                        <a class="btn" href="/admin/bainghe/edit/{{idBaiNghe}}"><i class="far fa-eye"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>


<div class="d-flex justify-content-center">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
</div>

